<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Staff Leave Requests</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f5f5f5;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      overflow: hidden;
      background-color: #fff;
    }

    th, td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #673ab7;
      color: #fff;
      font-weight: 700;
      text-transform: uppercase;
    }

    .action-buttons form {
      display: inline;
    }

    .action-buttons button {
      padding: 10px 15px;
      margin-right: 5px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
      background-color: #673ab7;
      color: #fff;
      transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .action-buttons button:hover {
      background-color: #512da8;
      transform: translateY(-2px);
    }

    tbody tr:hover {
      background-color: #f8f8f8;
      transform: scale(1.01);
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
      text-align: center;
      color: #673ab7;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
      animation: glow 2s infinite alternate;
    }

    @keyframes glow {
      from {
        text-shadow: 0 0 10px #673ab7;
      }
      to {
        text-shadow: 0 0 20px #673ab7;
      }
    }
  </style>
</head>
<body>
  <h2>Staff Leave Requests</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>From Date</th>
        <th>To Date</th>
        <th>Reason</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% leaveRequests.forEach(function(request, index) { %>
        <tr>
          <td><%= request.name %></td>
          <td><%= formatDate(request.from_date) %></td>
          <td><%= formatDate(request.to_date) %></td>
          <td><%= request.reason %></td>
          <td><%= request.status %></td>
          <td class="action-buttons">
            <form method="POST" action="/admin/acceptLeave">
              <input type="hidden" name="leaveId" value="<%= request.staff_id %>">
              <input type="hidden" name="from_date" value="<%= request.from_date %>">
              <input type="hidden" name="to_date" value="<%= request.to_date %>">
              <% if (request.status === 'pending') { %>
                <button type="submit">Accept</button>
              <% } %>
            </form>
            <form method="POST" action="/admin/rejectLeave">
                <input type="hidden" name="leaveId" value="<%= request.staff_id %>">
                <input type="hidden" name="from_date" value="<%= request.from_date %>">
                <input type="hidden" name="to_date" value="<%= request.to_date %>">
                <% if (request.status === 'pending') { %>
                    <button type="submit">Reject</button>
                  <% } %>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <% function formatDate(dateString) { %>
    <% const date = new Date(dateString); %>
    <% const formattedDate = date.toLocaleDateString('en-GB', { year: 'numeric', month: '2-digit', day: '2-digit' }); %>
    <% return formattedDate; %>
  <% } %>
</body>
</html>